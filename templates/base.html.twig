<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}
				My website
			{% endblock %}
		</title>
		{# Run `composer require symfony/webpack-encore-bundle`
						and uncomment the following Encore helpers to start using Symfony UX #}

		{% block stylesheets %}
			<!-- CSS only -->

			<link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">
			<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
		{% endblock %}

		{% block javascripts %}
			{#{{ encore_entry_script_tags('app') }}#}
		{% endblock %}
	</head>
	<body>
		<div class="container">
			{% block nav %}
				<nav class="navbar navbar-expand-lg navbar-light bg-light">
					<div class="navbar-brand" >NDP Fashion</div>
					<div class="collapse navbar-collapse" id="navbarSupportedContent">
						<ul class="navbar-nav mr-auto">
							<li class="nav-item active">
								<a class="nav-link" href="{{ path('homepage')}}">Home
								</a>
							</li>
							<li class="nav-item">
								<a class="nav-link" href="{{ path('category_index') }}">Category</a>
							</li>
							<li class="nav-item">
								<a class="nav-link" href="{{ path('product_index') }}">Product</a>
							</li>
							<li class="nav-item">
								<a class="nav-link" href="{{ path('orderItem_index') }}">OrderItems</a>
							</li>
						</ul>

						
					</div>
					<div class="nav-item">
							<a class="nav-link" href="{{ path('app_logout')}}">Logout</a>
						</div>
				</nav>
				
			{% endblock %}

			{% block body %}{% endblock %}
			{% block footer %}{% endblock %}
		</div>

	</body>
</html>
